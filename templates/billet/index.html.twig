{% extends 'base.html.twig' %}

{% block title %}Billet n°{{ billet.id }}{% endblock %}

{% block body %}
    <h1>Billet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ billet.id }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ billet.pays }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ billet.valeur }}</td>
            </tr>
            <tr>
                <th>Date d'apparition</th>
                <td>{{ billet.DateApparition }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td><a href="{{ path('album_show', {'id': billet.album.id}) }}">{{ billet.album.name }}</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('album_show', {'id': billet.album.id}) }}">Retour à l'album</a>
{% endblock %}
